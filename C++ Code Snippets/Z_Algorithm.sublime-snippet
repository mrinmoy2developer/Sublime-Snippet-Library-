vii z(string s){
    int n=sz(s),x=0,y=0;
    vii z(n);
    f(i,1,n){
        z[i]=max(0,min(z[i-x],int(y-i+1)));
        while(i+z[i]<n&&s[z[i]]==s[i+z[i]])x=i,y=i+z[i],z[i]++;
    }
    return z;
}
]]></content>
